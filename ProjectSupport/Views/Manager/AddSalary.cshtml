@model ProjectSupport.ViewModels.EditUserViewModel

@using Microsoft.AspNetCore.Identity
@using ProjectSupport.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewBag.Title = "Edit User";
}

<div class="container child">
    <div class="content-container">
        <div class="container-fluid">

            <img class="text-center" src="~/img/EditUser.svg">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="padding-left:76px">
                    <div class="card">
                        <div class="card-header">
                            <h4>Edit User</h4>
                        </div>
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.AppUser.Id)
                            @Html.HiddenFor(model => model.AppUser.UserName)
                            @Html.HiddenFor(model => model.AppUser.NormalizedUserName)
                            @Html.HiddenFor(model => model.AppUser.Email)
                            @Html.HiddenFor(model => model.AppUser.NormalizedEmail)
                            @Html.HiddenFor(model => model.AppUser.EmailConfirmed)
                            @Html.HiddenFor(model => model.AppUser.PasswordHash)
                            @Html.HiddenFor(model => model.AppUser.SecurityStamp)
                            @Html.HiddenFor(model => model.AppUser.ConcurrencyStamp)
                            @Html.HiddenFor(model => model.AppUser.PhoneNumber)
                            @Html.HiddenFor(model => model.AppUser.PhoneNumberConfirmed)
                            @Html.HiddenFor(model => model.AppUser.TwoFactorEnabled)
                            @Html.HiddenFor(model => model.AppUser.LockoutEnd)
                            @Html.HiddenFor(model => model.AppUser.LockoutEnabled)
                            @Html.HiddenFor(model => model.AppUser.AccessFailedCount)
                            @Html.HiddenFor(model => model.AppUser.FirstName)
                            @Html.HiddenFor(model => model.AppUser.LastName)
                            @Html.HiddenFor(model => model.AppUser.ProfilePicture)
                            @Html.HiddenFor(model => model.UserId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.AppUser.HourlyRate, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.AppUser.HourlyRate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AppUser.HourlyRate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a class="btn btn-primary"
                               asp-action="SeeDevelopers" asp-controller="Manager" asp-route-id="@UserManager.GetUserId(User)">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
