@model List<Notification>

@using Microsoft.AspNetCore.Identity
@using ProjectSupport.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewBag.Title = "Notifications";
}

<div class="container child2">
    <div class="content-container">
        <div class="container-fluid">
            @if (Model.Count > 0)
            {
                @foreach (var notification in Model)
                {
                    @if (notification.IsSuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">@notification.Description</h4>
                            <hr />
                            <p>@notification.Created</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">@notification.Description</h4>
                            <hr />
                            <p>@notification.Created</p>
                        </div>
                    }
                }
            }
            else
            {
                <div class="container">
                    <div class="row">
                        <div class="col-10">
                            <div class="text-center">
                                <h3 class="text-warning" style="margin-left:100px">Notifications</h3>
                                <div class="text-warning" style="margin-left:100px">You have no new notifications.</div>
                                <img class="text-danger" src="~/img/empty.svg">
                                <p>
                                    <br />
                                </p>
                            </div>
                        </div>
                        <div class="col-2">
                            <div>
                                <a class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index" asp-route-id=@UserManager.GetUserId(User)>
                                    <i class="fas fa-arrow-left" style="font-size:25px; color:white" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>