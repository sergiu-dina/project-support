@model ProjectSupport.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>


<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-group">
        <input asp-for="RoleName" class="form-control w-25" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
        <button type="submit" class="btn btn-primary">Add New Role</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary"
   asp-action="Index" asp-controller="Admin">
    Back to List
</a>